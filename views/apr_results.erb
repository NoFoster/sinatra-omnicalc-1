<h1> Payment Results </h1>

<div>
  <dl>
  <dt>APR</dt>
    <dd>
      <%= @user_apr.to_fs(:percentage, { :precision => 4}) %>
    </dd>
  </dl>
</div>

<div>
  <dl>
    <dt>Number of years</dt>
    <dd>
      <%= @user_years.to_fs %>
    </dd>
  </dl>
</div>

<div>
  <dl>
    <dt>Principal</dt>
    <dd>
      <%= @user_principal.to_fs(:currency) %>
    </dd>
  </dl>
</div>

<div>
  <dl>
    <dt>Payment</dt>
    <dd>
      <%= @the_result.to_fs(:currency) %>
    </dd>
  </dl>
</div>

